<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  
  <ThingDef ParentName="ResourceBase">
    <defName>IronOre</defName>
    <label>iron ore</label>
    <description>A chunk of iron ore. While it's useless in its current form, it can be smelted to recover iron.</description>
    <stackLimit>100</stackLimit>
    <graphicData>
      <texPath>IronOre</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.5</MarketValue>
      <Mass>0.5</Mass>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>6</deepCommonality>
    <deepCountPerPortion>60</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>20</min>
      <max>40</max>
    </deepLumpSizeRange>
  </ThingDef>


