<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>SmeltSteel</defName>
    <label>smelt iron into steel</label>
    <description>Smelt iron into hardened workable steel with a coal or charcoal.</description>
    <jobString>Refining steel from iron.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>800</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>20</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs />
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Iron</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Iron</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Steel>20</Steel>
    </products>
    <recipeUsers>
      <li>NECBloomery</li>
      <li MayRequire="Mlie.CoalExpanded">CoalSmelter</li>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <researchPrerequisite>TP_Steel_Metallurgy</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>SmeltSteelBulk</defName>
    <label>smelt iron into steel in bulk</label>
    <description>Smelt lots of iron into hardened workable steel with a little coal or charcoal.</description>
    <jobString>Refining steel from iron in bulk.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>100</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs />
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Iron</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Iron</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Steel>100</Steel>
    </products>
    <recipeUsers>
      <li MayRequire="Mlie.CoalExpanded">CoalSmelter</li>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
    <researchPrerequisite>TP_Steel_Metallurgy</researchPrerequisite>
</Defs>