<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>SmeltIron</defName>
    <label>smelt iron ore into iron</label>
    <description>Smelt iron ore into the  workable iron with coal or charcoal.</description>
    <jobString>Refining iron from iron ore.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>15</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs />
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>IronOre</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>IronOre</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Iron>15</Iron>
    </products>
    <recipeUsers>
      <li>NECBloomery</li>
      <li MayRequire="Mlie.CoalExpanded">CoalSmelter</li>
    </recipeUsers>
    <researchPrerequisite>TP_Bronze_Metallurgy</researchPrerequisite>
  </RecipeDef>

