<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>SmeltSilver</defName>
    <label>smelt silver ore into silver</label>
    <description>Smelt silver ore into the  workable silver.</description>
    <jobString>Refining silver from silver ore.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>20</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SilverOre</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SilverOre</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Silver>20</Silver>
    </products>
    <recipeUsers>
      <li>NECBloomery</li>
      <li>ElectricSmelter</li>
      <li MayRequire="Mlie.CoalExpanded">CoalSmelter</li>
    </recipeUsers>
    <researchPrerequisite>TP_Bronze_Metallurgy</researchPrerequisite>
  </RecipeDef>

