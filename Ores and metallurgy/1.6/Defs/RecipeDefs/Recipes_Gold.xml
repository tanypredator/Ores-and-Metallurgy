<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>SmeltNativeGold</defName>
    <label>smelt native gold into gold</label>
    <description>Smelt native gold into the workable gold.</description>
    <jobString>Refining gold from native gold.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>200</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>10</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>NativeGold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NativeGold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Gold>10</Gold>
    </products>
    <recipeUsers>
      <li>SmeltingHole</li>
      <li>NECBloomery</li>
      <li>ElectricSmelter</li>
      <li MayRequire="Mlie.CoalExpanded">CoalSmelter</li>
    </recipeUsers>
    <researchPrerequisite>TP_Tribal_Metallurgy</researchPrerequisite>
  </RecipeDef>

</Defs>