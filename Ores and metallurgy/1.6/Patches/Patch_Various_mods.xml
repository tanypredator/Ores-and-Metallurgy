        		<value>
  		    		<Steel>50</Steel>
        		</value>
      	</li>
      	<li Class="PatchOperationAdd">
        		<xpath>Defs/ThingDef[defName="WastepackPowerplant"]/costList</xpath>
        		<value>
  		    		<Copper>25</Copper>
        		</value>
      	</li>

      	<li Class="PatchOperationReplace">
        		<xpath>Defs/ThingDef[defName="WastepackPowerplantNB"]/costList/Steel</xpath>
        		<value>
  		    		<Steel>50</Steel>
        		</value>
      	</li>
      	<li Class="PatchOperationAdd">
        		<xpath>Defs/ThingDef[defName="WastepackPowerplantNB"]/costList</xpath>
        		<value>
  		    		<Copper>25</Copper>
        		</value>
      	</li>
      </operations>
    </match>
  </Operation>

