<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>Copper</defName>
    <label>copper</label>
    <description>Raw copper that can be forged with coal (or charcoal) into bronze. Copper is very soft and reacts to oxygen and corrodes easily.</description>
    <graphicData>
      <texPath>Copper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.6</Mass>
      <StuffPower_Armor_Sharp>0.4</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.3</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.65</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.7</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.8</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <stuffAdjective>copper</stuffAdjective>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.30</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <appearance>Metal</appearance>
      <color>(220,110,80)</color>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <Beauty>3</Beauty>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
        <Beauty>1.2</Beauty>
        <Flammability>0</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
</Defs>